{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
      "semi": ["error", "never"],
      "space-before-function-paren": ["error", "always"],
      "max-len": ["error", 200],
      "no-shadow": 0,
      "no-param-reassign": 0,
      "react/jsx-filename-extension": 0,
      "react/state-in-constructor": 0
    },
    "env": {
        "jest": true
      },
      "globals": {
        "document": true
      }    
  }  